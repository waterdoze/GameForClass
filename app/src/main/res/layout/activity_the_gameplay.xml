<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.TheGameplay">

    <FrameLayout

        android:id="@+id/frameLayout"
        android:layout_width="577dp"

        android:layout_height="325dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <fragment
            android:id="@+id/gameFragment"
            android:name="com.example.gameforclass.activities.GameFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/BigTabButton"
        android:layout_width="26dp"
        android:layout_height="21dp"
        android:layout_marginTop="30dp"
        android:onClick="changeSideBar"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/BigSideBar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cholera_easy_mode"
        tools:visibility="invisible" />

    <ScrollView
        android:id="@+id/SideBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="580dp"
        android:layout_marginLeft="580dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Neutrophils" />

            <ImageButton
                android:id="@+id/NeutroButton"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:onClick="neutroButton"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/neutrophilbutton" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monocytes" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/macrophagebutton" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lymphocytes" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/naivetcellbutton" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/SmallTabButton"
        android:layout_width="26dp"
        android:layout_height="21dp"
        android:layout_marginTop="30dp"
        android:onClick="changeSideBar"
        app:layout_constraintEnd_toStartOf="@+id/SideBar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rabies_hard_mode" />

    <ScrollView
        android:id="@+id/BigSideBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="500dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/buttontemplate" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/healthIncButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="devTab"
            android:text="Health+10" />

        <Button
            android:id="@+id/bmIncButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="devTab"
            android:text="BM+10" />

        <Button
            android:id="@+id/nextRoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="devTab"
            android:text="Round+1" />

        <Button
            android:id="@+id/decRoundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="devTab"
            android:text="Round-1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="580dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bottombar" />

    <TextView
        android:id="@+id/PlayerHealth"
        android:layout_width="84dp"
        android:layout_height="56dp"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="cursive"
        android:text="100"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

    <TextView
        android:id="@+id/BiomoleculeCounter"
        android:layout_width="119dp"
        android:layout_height="59dp"
        android:layout_marginStart="268dp"
        android:layout_marginLeft="268dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="cursive"
        android:text="100"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

    <TextView
        android:id="@+id/RoundCounter"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_marginStart="404dp"
        android:layout_marginLeft="404dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="cursive"
        android:text="Round 1"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="53dp"
        android:layout_height="28dp"
        android:layout_marginStart="384dp"
        android:layout_marginLeft="384dp"
        android:layout_marginBottom="20dp"
        android:onClick="resumeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_ff" />

</androidx.constraintlayout.widget.ConstraintLayout>
